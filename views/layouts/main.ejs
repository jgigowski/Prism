<!DOCTYPE html>
<html lang="en" class="<%= (typeof darkMode !== 'undefined' && darkMode) ? 'dark' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Prism' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/settings-fix.css">
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#eff6ff',
              100: '#dbeafe',
              200: '#bfdbfe',
              300: '#93c5fd',
              400: '#60a5fa',
              500: '#3b82f6',
              600: '#2563eb',
              700: '#1d4ed8',
              800: '#1e40af',
              900: '#1e3a8a',
            }
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-200">
  <% if (isAuthenticated) { %>
  <!-- Navigation Bar -->
  <nav class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 transition-colors duration-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <!-- Logo -->
          <div class="flex-shrink-0 flex items-center">
            <svg class="h-8 w-8 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <span class="ml-2 text-xl font-semibold text-gray-900 dark:text-white">Prism</span>
          </div>

          <!-- Navigation Links -->
          <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
            <a href="/home" class="<%= (typeof active !== 'undefined' && active === 'home') ? 'border-primary-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-100' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Home
            </a>
            <a href="/profile" class="<%= (typeof active !== 'undefined' && active === 'profile') ? 'border-primary-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-100' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Profile
            </a>
            <a href="/settings" class="<%= (typeof active !== 'undefined' && active === 'settings') ? 'border-primary-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-100' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Settings
            </a>
            <a href="/tokens" class="<%= (typeof active !== 'undefined' && active === 'tokens') ? 'border-primary-500 text-gray-900 dark:text-white' : 'border-transparent text-gray-500 dark:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 hover:text-gray-700 dark:hover:text-gray-100' %> inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              Tokens
            </a>
          </div>
        </div>

        <!-- User Menu -->
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0">
            <span class="text-sm text-gray-700 dark:text-gray-200">
              Hello, <span class="font-medium"><%= user?.name || user?.preferred_username || 'User' %></span>
            </span>
          </div>

          <!-- Dark Mode Toggle Slider -->
          <div class="flex items-center gap-2">
            <!-- Sun Icon -->
            <svg class="h-5 w-5 text-yellow-500 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>

            <!-- Toggle Switch -->
            <button type="button" id="darkModeToggle"
              class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 <%= (typeof darkMode !== 'undefined' && darkMode) ? 'bg-primary-600' : 'bg-gray-300' %>"
              role="switch"
              aria-checked="<%= (typeof darkMode !== 'undefined' && darkMode) ? 'true' : 'false' %>">
              <span class="sr-only">Toggle dark mode</span>
              <span aria-hidden="true"
                class="pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out <%= (typeof darkMode !== 'undefined' && darkMode) ? 'translate-x-5' : 'translate-x-0' %>">
              </span>
            </button>

            <!-- Moon Icon -->
            <svg class="h-5 w-5 text-gray-500 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
          </div>

          <div>
            <a href="/logout" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              Logout
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <% } %>

  <!-- Main Content -->
  <main class="<%= isAuthenticated ? 'py-10' : '' %>">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-auto transition-colors duration-200">
    <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm text-gray-500 dark:text-gray-400">
        &copy; <%= new Date().getFullYear() %> Prism. All rights reserved.
      </p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
  <script src="/js/settings-debug.js"></script>
  <% if (isAuthenticated) { %>
  <script>
    // Dark mode toggle handler
    const darkModeToggle = document.getElementById('darkModeToggle');
    if (darkModeToggle) {
      darkModeToggle.addEventListener('click', async function() {
        try {
          const response = await fetch('/profile/dark-mode', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              darkMode: !<%= (typeof darkMode !== 'undefined' && darkMode) ? 'true' : 'false' %>
            })
          });

          if (response.ok) {
            window.location.reload();
          }
        } catch (error) {
          console.error('Failed to toggle dark mode:', error);
        }
      });
    }
  </script>
  <% } %>
</body>
</html>
