<%
  const active = 'settings';
  const isEnrolling = typeof enrollmentData !== 'undefined' && enrollmentData !== null;
  const enrollingType = isEnrolling ? enrollmentData.factorType : null;

  // Map Okta factor types to user-friendly names
  const factorTypeNames = {
    'signed_nonce': 'Okta Verify',
    'token:software:totp': 'Authenticator App (TOTP)',
    'push': 'Okta Verify Push',
    'sms': 'SMS Authentication',
    'call': 'Voice Call',
    'email': 'Email Authentication',
    'question': 'Security Question',
    'token:hotp': 'Hardware Token (HOTP)',
    'token:hardware': 'Hardware Token (YubiKey)',
    'u2f': 'Security Key (U2F)',
    'webauthn': 'Security Key (FIDO2)',
    'token': 'Hardware Token'
  };

  // Get friendly name for a factor type
  const getFactorName = (factorType, provider) => {
    if (provider === 'OKTA' && (factorType === 'signed_nonce' || factorType === 'push')) {
      return 'Okta Verify';
    }
    if (provider === 'GOOGLE' && factorType === 'token:software:totp') {
      return 'Google Authenticator';
    }
    if (provider === 'YUBICO') {
      return 'YubiKey';
    }
    return factorTypeNames[factorType] || factorType;
  };

  const body = `
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Authenticator Settings</h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Manage your multi-factor authentication methods</p>
    </div>

    ${success ? `
    <div class="mb-6 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium">${success}</p>
        </div>
      </div>
    </div>
    ` : ''}

    ${error ? `
    <div class="mb-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-200 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium">${error}</p>
        </div>
      </div>
    </div>
    ` : ''}

    <!-- TOTP Enrollment Modal -->
    ${enrollingType === 'totp' ? `
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg mb-6 border-2 border-primary-500">
      <div class="px-6 py-4 bg-primary-50 dark:bg-primary-900/30 border-b border-primary-200 dark:border-primary-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Enroll Authenticator App (TOTP)</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <p class="text-sm text-gray-600 dark:text-gray-400">Scan this QR code with your authenticator app (Google Authenticator, Authy, etc.)</p>

          <!-- QR Code -->
          <div class="flex justify-center p-4 bg-white dark:bg-slate-800 border-2 border-gray-200 dark:border-slate-600 rounded-lg">
            <img src="${enrollmentData.qrCode}" alt="QR Code" class="w-64 h-64">
          </div>

          <!-- Manual Entry -->
          <details class="text-sm">
            <summary class="cursor-pointer text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-medium">Can't scan? Enter manually</summary>
            <div class="mt-2 p-3 bg-gray-50 dark:bg-slate-800 rounded border border-gray-200 dark:border-slate-600">
              <p class="text-xs text-gray-600 dark:text-gray-400 mb-1">Secret Key:</p>
              <code class="text-sm font-mono text-gray-900 dark:text-gray-100 break-all">${enrollmentData.sharedSecret}</code>
            </div>
          </details>

          <!-- Verification Form -->
          <form method="POST" action="/settings/enroll/totp/verify" class="mt-6">
            <input type="hidden" name="factorId" value="${enrollmentData.factorId}">
            <label for="passCode" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Enter the 6-digit code from your app:
            </label>
            <input type="text" name="passCode" id="passCode" required pattern="[0-9]{6}" maxlength="6"
              class="block w-full border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 bg-white dark:bg-slate-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-primary-500 focus:border-primary-500 text-lg text-center font-mono"
              placeholder="123456" autofocus>

            <div class="mt-4 flex gap-3">
              <button type="submit" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                Verify & Activate
              </button>
              <form method="POST" action="/settings/enroll/cancel" class="flex-1">
                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 dark:border-slate-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                  Cancel
                </button>
              </form>
            </div>
          </form>
        </div>
      </div>
    </div>
    ` : ''}

    <!-- SMS Enrollment Modal -->
    ${enrollingType === 'sms' ? `
    <div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg mb-6 border-2 border-primary-500">
      <div class="px-6 py-4 bg-primary-50 dark:bg-primary-900/30 border-b border-primary-200 dark:border-primary-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Enroll SMS Authentication</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <p class="text-sm text-gray-600 dark:text-gray-400">We've sent a verification code to ${enrollmentData.phoneNumber}</p>

          <!-- Verification Form -->
          <form method="POST" action="/settings/enroll/sms/verify">
            <input type="hidden" name="factorId" value="${enrollmentData.factorId}">
            <label for="passCode" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Enter the 6-digit code:
            </label>
            <input type="text" name="passCode" id="passCode" required pattern="[0-9]{6}" maxlength="6"
              class="block w-full border border-gray-300 dark:border-slate-600 rounded-md shadow-sm py-2 px-3 bg-white dark:bg-slate-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-primary-500 focus:border-primary-500 text-lg text-center font-mono"
              placeholder="123456" autofocus>

            <div class="mt-4 flex gap-3">
              <button type="submit" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                Verify & Activate
              </button>
              <form method="POST" action="/settings/enroll/cancel" class="flex-1">
                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 dark:border-slate-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-slate-700 hover:bg-gray-50 dark:hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                  Cancel
                </button>
              </form>
            </div>
          </form>
        </div>
      </div>
    </div>
    ` : ''}

    <!-- Enrolled Authenticators -->
    <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg mb-12">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Enrolled Authenticators</h2>
      </div>
      <div class="p-6 space-y-4">
        ${factors && factors.length > 0 ? factors.map(factor => `
        <div class="flex items-center justify-between p-6 bg-white dark:bg-slate-700 rounded-xl border-2 border-gray-200 dark:border-slate-600">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              ${factor.factorType === 'token:software:totp' ? `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              ` : factor.factorType === 'sms' || factor.factorType === 'call' ? `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              ` : factor.factorType === 'signed_nonce' || factor.factorType === 'push' ? `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
              </svg>
              ` : factor.factorType === 'email' ? `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              ` : factor.factorType === 'webauthn' || factor.factorType === 'u2f' || factor.provider === 'YUBICO' ? `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
              </svg>
              ` : factor.factorType === 'question' ? `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              ` : `
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              `}
            </div>
            <div class="ml-5">
              <h3 class="text-xl font-medium text-gray-900 dark:text-white">
                ${getFactorName(factor.factorType, factor.provider)}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                ${factor.factorType === 'sms' && factor.profile?.phoneNumber ? 'Phone: ' + factor.profile.phoneNumber : ''}
                ${factor.status ? 'Status: <span class="text-green-600 dark:text-green-400">' + factor.status + '</span>' : ''}
              </p>
            </div>
          </div>
          <form method="POST" action="/settings/factor/${factor.id}/delete" onsubmit="return confirm('Are you sure you want to remove this authenticator?');">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
              Remove
            </button>
          </form>
        </div>
        `).join('') : `
        <div class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
          <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          <p class="mt-2">No authenticators enrolled</p>
        </div>
        `}
      </div>
    </div>

    <!-- Enroll New Authenticator -->
    ${!isEnrolling ? `
    <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Enroll New Authenticator</h2>
      </div>
      <div class="p-6 space-y-6">
        <!-- TOTP Enrollment -->
        <div class="flex items-center justify-between p-6 bg-white dark:bg-slate-700 rounded-xl border-2 border-gray-200 dark:border-slate-600">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="ml-5">
              <h3 class="text-xl font-medium text-gray-900 dark:text-white">Authenticator App (TOTP)</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Use Google Authenticator, Authy, or similar apps</p>
            </div>
          </div>
          <form method="POST" action="/settings/enroll/totp">
            <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Enroll
            </button>
          </form>
        </div>

        <!-- SMS Enrollment -->
        <div class="p-6 bg-white dark:bg-slate-700 rounded-xl border-2 border-gray-200 dark:border-slate-600">
          <div class="flex items-start justify-between">
            <div class="flex items-start flex-1">
              <div class="flex-shrink-0">
                <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <div class="ml-5 flex-1">
                <h3 class="text-xl font-medium text-gray-900 dark:text-white">SMS Authentication</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Receive codes via text message</p>
              </div>
            </div>
          </div>

          <!-- SMS Enrollment Form -->
          <form method="POST" action="/settings/enroll/sms" class="mt-6">
            <div class="flex gap-3">
              <input type="tel" name="phoneNumber" id="phoneNumber" required
                placeholder="+12345678900"
                pattern="\\+[0-9]{10,15}"
                class="flex-1 border border-gray-300 dark:border-slate-600 rounded-lg shadow-sm py-3 px-4 bg-white dark:bg-slate-800 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                title="Phone number in E.164 format (e.g., +12345678900)">
              <button type="submit" class="inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Enroll
              </button>
            </div>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Format: +1234567890 (include country code)</p>
          </form>
        </div>
      </div>

        <div class="p-6 space-y-6">
          <!-- Passkey - End-user Enrollments API -->
          <div class="flex items-center justify-between p-6 bg-white dark:bg-slate-700 rounded-xl border-2 border-gray-200 dark:border-slate-600">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <svg class="h-12 w-12 text-primary-500 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="ml-5">
                <h3 class="text-xl font-medium text-gray-900 dark:text-white">Add Passkey</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Using End-user Enrollments API</p>
              </div>
            </div>
            ${passkeyAuthenticatorId ? `
            <a id="addPasskey" href="https://${oktaDomain}/idp/bootstrap/enroll-authenticator/${passkeyAuthenticatorId}?redirect_uri=${encodeURIComponent(redirectUri)}" class="inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Enroll
            </a>
            ` : `
            <button disabled class="inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-lg text-white bg-gray-400 cursor-not-allowed">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Enroll (Unavailable)
            </button>
            `}
          </div>



    </div>
    ` : ''}
  </div>
  `;
%>
<%- include('layouts/main', { title, user, isAuthenticated, active, body, darkMode }) %>
