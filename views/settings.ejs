<%
  const active = 'settings';
  const isEnrolling = typeof enrollmentData !== 'undefined' && enrollmentData !== null;
  const enrollingType = isEnrolling ? enrollmentData.factorType : null;

  const body = `
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 settings-container">
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Authenticator Settings</h1>
      <p class="mt-2 text-sm text-gray-600">Manage your multi-factor authentication methods</p>
    </div>

    ${success ? `
    <div class="mb-6 bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 alert">
      <div class="flex">
        <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium">${success}</p>
        </div>
      </div>
    </div>
    ` : ''}

    ${error ? `
    <div class="mb-6 bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 alert">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
        </svg>
        <div class="ml-3">
          <p class="text-sm font-medium">${error}</p>
        </div>
      </div>
    </div>
    ` : ''}

    <!-- TOTP Enrollment Modal -->
    ${enrollingType === 'totp' ? `
    <div class="bg-white shadow-lg rounded-lg mb-6 border-2 border-primary-500">
      <div class="px-6 py-4 bg-primary-50 border-b border-primary-200">
        <h2 class="text-lg font-medium text-gray-900">Enroll Authenticator App (TOTP)</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <p class="text-sm text-gray-600">Scan this QR code with your authenticator app (Google Authenticator, Authy, etc.)</p>

          <!-- QR Code -->
          <div class="flex justify-center p-4 bg-white border-2 border-gray-200 rounded-lg">
            <img src="${enrollmentData.qrCode}" alt="QR Code" class="w-64 h-64">
          </div>

          <!-- Manual Entry -->
          <details class="text-sm">
            <summary class="cursor-pointer text-primary-600 hover:text-primary-700 font-medium">Can't scan? Enter manually</summary>
            <div class="mt-2 p-3 bg-gray-50 rounded border border-gray-200">
              <p class="text-xs text-gray-600 mb-1">Secret Key:</p>
              <code class="text-sm font-mono text-gray-900 break-all">${enrollmentData.sharedSecret}</code>
            </div>
          </details>

          <!-- Verification Form -->
          <form method="POST" action="/settings/enroll/totp/verify" class="mt-6">
            <input type="hidden" name="factorId" value="${enrollmentData.factorId}">
            <label for="passCode" class="block text-sm font-medium text-gray-700 mb-2">
              Enter the 6-digit code from your app:
            </label>
            <input type="text" name="passCode" id="passCode" required pattern="[0-9]{6}" maxlength="6"
              class="block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-primary-500 focus:border-primary-500 text-lg text-center font-mono"
              placeholder="123456" autofocus>

            <div class="mt-4 flex gap-3">
              <button type="submit" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                Verify & Activate
              </button>
              <form method="POST" action="/settings/enroll/cancel" class="flex-1">
                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                  Cancel
                </button>
              </form>
            </div>
          </form>
        </div>
      </div>
    </div>
    ` : ''}

    <!-- SMS Enrollment Modal -->
    ${enrollingType === 'sms' ? `
    <div class="bg-white shadow-lg rounded-lg mb-6 border-2 border-primary-500">
      <div class="px-6 py-4 bg-primary-50 border-b border-primary-200">
        <h2 class="text-lg font-medium text-gray-900">Enroll SMS Authentication</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <p class="text-sm text-gray-600">We've sent a verification code to ${enrollmentData.phoneNumber}</p>

          <!-- Verification Form -->
          <form method="POST" action="/settings/enroll/sms/verify">
            <input type="hidden" name="factorId" value="${enrollmentData.factorId}">
            <label for="passCode" class="block text-sm font-medium text-gray-700 mb-2">
              Enter the 6-digit code:
            </label>
            <input type="text" name="passCode" id="passCode" required pattern="[0-9]{6}" maxlength="6"
              class="block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-primary-500 focus:border-primary-500 text-lg text-center font-mono"
              placeholder="123456" autofocus>

            <div class="mt-4 flex gap-3">
              <button type="submit" class="flex-1 inline-flex justify-center items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                Verify & Activate
              </button>
              <form method="POST" action="/settings/enroll/cancel" class="flex-1">
                <button type="submit" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                  Cancel
                </button>
              </form>
            </div>
          </form>
        </div>
      </div>
    </div>
    ` : ''}

    <!-- Enrolled Authenticators -->
    <div class="bg-white shadow-sm rounded-lg enrolled-section" style="margin-bottom: 3rem !important;">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Enrolled Authenticators</h2>
      </div>
      <div class="divide-y divide-gray-200">
        ${factors && factors.length > 0 ? factors.map(factor => `
        <div class="px-6 py-4 flex items-center justify-between enrolled-item">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              ${factor.factorType === 'token:software:totp' ? `
              <svg class="h-8 w-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              ` : factor.factorType === 'sms' ? `
              <svg class="h-8 w-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              ` : `
              <svg class="h-8 w-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
              `}
            </div>
            <div class="ml-4">
              <h3 class="text-sm font-medium text-gray-900">
                ${factor.factorType === 'token:software:totp' ? 'Authenticator App (TOTP)' :
                  factor.factorType === 'sms' ? 'SMS Authentication' :
                  factor.factorType === 'email' ? 'Email Authentication' :
                  factor.factorType}
              </h3>
              <p class="text-sm text-gray-500">
                ${factor.factorType === 'sms' && factor.profile?.phoneNumber ? 'Phone: ' + factor.profile.phoneNumber : ''}
                ${factor.status ? 'Status: <span class="text-green-600">' + factor.status + '</span>' : ''}
              </p>
            </div>
          </div>
          <form method="POST" action="/settings/factor/${factor.id}/delete" onsubmit="return confirm('Are you sure you want to remove this authenticator?');" class="remove-button-form">
            <button type="submit" class="remove-button inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm leading-4 font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
              Remove
            </button>
          </form>
        </div>
        `).join('') : `
        <div class="px-6 py-8 text-center text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
          <p class="mt-2">No authenticators enrolled</p>
        </div>
        `}
      </div>
    </div>

    <!-- Enroll New Authenticators -->
    ${!isEnrolling ? `
    <div class="bg-white shadow-sm rounded-lg enroll-section">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Enroll New Authenticator</h2>
      </div>
      <div class="p-6 space-y-4">
        <!-- TOTP Enrollment -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200 enroll-card">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-10 w-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <h3 class="text-base font-medium text-gray-900">Authenticator App (TOTP)</h3>
              <p class="text-sm text-gray-600">Use Google Authenticator, Authy, or similar apps</p>
            </div>
          </div>
          <form method="POST" action="/settings/enroll/totp">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              Enroll
            </button>
          </form>
        </div>

        <!-- SMS Enrollment -->
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200 enroll-card">
          <div class="flex items-center flex-1">
            <div class="flex-shrink-0">
              <svg class="h-10 w-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <div class="ml-4 flex-1">
              <h3 class="text-base font-medium text-gray-900">SMS Authentication</h3>
              <p class="text-sm text-gray-600">Receive codes via text message</p>

              <!-- SMS Enrollment Form -->
              <form method="POST" action="/settings/enroll/sms" class="mt-2 flex gap-2" id="smsForm">
                <input type="tel" name="phoneNumber" id="phoneNumber" required
                  placeholder="+12345678900"
                  pattern="\\+[0-9]{10,15}"
                  class="flex-1 text-sm border border-gray-300 rounded-md shadow-sm py-1.5 px-3 focus:outline-none focus:ring-primary-500 focus:border-primary-500"
                  title="Phone number in E.164 format (e.g., +12345678900)">
                <button type="submit" class="inline-flex items-center px-4 py-1.5 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                  Enroll
                </button>
              </form>
              <p class="text-xs text-gray-500 mt-1">Format: +1234567890 (include country code)</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    ` : ''}
  </div>
  `;
%>
<%- include('layouts/main', { title, user, isAuthenticated, active, body }) %>
